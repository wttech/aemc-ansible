# Multiple AEM instances service managed by AEM Compose CLI

[Unit]
Description=AEM Instances
Requires=network.target
After=cloud-final.service

[Service]
Type=forking

ExecStart={{ aem_system_script }} launch
ExecStop={{ aem_system_script }} stop
ExecReload={{ aem_system_script }} restart
KillMode=process
RemainAfterExit=yes
TimeoutStartSec=1810
TimeoutStopSec=190
LimitNOFILE=20000

[Install]
WantedBy=cloud-init.target
